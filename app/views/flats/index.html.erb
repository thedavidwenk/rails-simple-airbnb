<div class="container">
  <div class="d-flex justify-content-between align-items-center my-4">
    <h1>All our Flats (<%= @flats.length %>)</h1>
  </div>
  <div class="row">
    <% @flats.reverse_each do |flat| %>
      <div class="col-md-6 col-lg-4 col-sm-12 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>    
          </div>
          <div class="card-body d-flex justify-content-start">
            <p class="card-text"><i class="fa-solid fa-euro-sign"> </i> <%= flat.price_per_night %>.00</p>
            <p class="card-text mx-2"><i class="fa-solid fa-user-group"> </i> <%= flat.number_of_guests %></p>    
          </div>
          <div class="card-footer bg-transparent">
            <a href="#" class="btn btn-primary">Show Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>