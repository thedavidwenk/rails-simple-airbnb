<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, :placeholder => 'Your flat name' %>
    <%= f.input :address, :placeholder => 'Your flat address' %>
    <%= f.input :price_per_night, :placeholder => 'Your price per night rate in Euro (â‚¬)' %>
    <%= f.input :number_of_guests, :placeholder => 'Your maximum number of guests' %>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', style: "resize: none;", :placeholder => 'Write a description of your flat' %>
  </div>

  <div class="form-actions my-4">
    <%= f.button :submit, class: "btn btn-primary"%>
  </div>
<% end %>


